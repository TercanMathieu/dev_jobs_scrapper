# Discord webhook url where all the alert will be sent
WEBHOOK_URL=

# Discord webhook url for logs (optional, for monitoring)
LOG_WEBHOOK_URL=

# MongoDB URL (credentials included in it such as mongodb+srv://user:pass@server/dbname)
MONGO_URL=

# Chromedriver path (should be something like /usr/local/bin/chromedriver for local, /app/.chromedriver/bin/chromedriver for Heroku)
CHROMEDRIVER_PATH=

# Google chrome bin path (should be something like /app/.apt/usr/bin/google-chrome for Heroku)
GOOGLE_CHROME_BIN=

# Proxy configuration for scraping protected sites (LinkedIn, Indeed)
# Format: http://user:pass@host:port or http://host:port
# You can use services like: ScrapingBee, Bright Data, Oxylabs, or any HTTP proxy
PROXY_URL=

# Specific proxies for each site (optional, falls back to PROXY_URL)
PROXY_INDEED=
PROXY_LINKEDIN=

# ScrapingBee API key (alternative to proxies)
# Get a key at: https://www.scrapingbee.com/
SCRAPINGBEE_API_KEY=